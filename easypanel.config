# Configuração para Easypanel
# Este arquivo ajuda o Easypanel a entender como executar a aplicação

# Porta que a aplicação usa
PORT=3000

# Host que a aplicação deve escutar
HOST=0.0.0.0

# Modo de produção
FLASK_ENV=production

# Python sem buffer
PYTHONUNBUFFERED=1

# Timeout para health check
HEALTHCHECK_TIMEOUT=10

# Intervalo do health check
HEALTHCHECK_INTERVAL=30
